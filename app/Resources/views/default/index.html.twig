{% extends 'base.html.twig' %}

{% block title %}
    Catalogo{{ parent() }}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            {% for product in products %}
                <div class="col-sm-6 col-md-3">
                    <div class="thumbnail">
                        <img src="{{ asset(product.imagePath) }}" alt="{{ product.name }}">
                        <div class="caption">
                            <h3>{{ product.name }}</h3>
                            <p>{{ product.description }}</p>
                            <p class="lead">R$ {{ product.price }}</p>
                            <p><a href="{{ path('product', {'id': product.id}) }}" class="btn btn-primary btn-lg btn-block">Comprar</a></p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
